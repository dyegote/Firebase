<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#39E1DCDC"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="294dp">

        <TextView
            android:id="@+id/emailTextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:padding="5dp" />

        <TextView
            android:id="@+id/providerTextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Provider"
            android:padding="5dp" />

        <EditText
            android:id="@+id/direccionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="40dp"
            android:hint="Caale, numero, piso"
            android:padding="5dp" />

        <EditText
            android:id="@+id/telefonoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="40dp"
            android:hint="Telefono"
            android:padding="5dp" />

        <Button
            android:id="@+id/guardarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="GUARDAR"
            android:textColor="@color/black"
            app:backgroundTint="@color/white" />

        <Button
            android:id="@+id/recuperarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="RECUPERAR"
            android:textColor="@color/black"
            app:backgroundTint="@color/white" />

        <Button
            android:id="@+id/elimimnarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="ELIMINAR"
            android:textColor="@color/black"
            app:backgroundTint="@color/white" />

        <Button
            android:id="@+id/googleLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:drawableLeft="@drawable/ic_google_24"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="CERRAR SESION"
            android:textColor="@color/white"
            app:backgroundTint="@color/teal_200" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>